
{
  "openapi": "3.0.0",
  "info": {
    "title": "SuperHero Proxy API",
    "version": "1.0.0",
    "description": "API proxy hacia SuperHero API y productos locales desde archivo JSON"
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/api/superhero/{id}": {
      "get": {
        "summary": "Buscar superhéroe por id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Id del superhéroe",
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado exitoso",
            "content": {
              "application/json": {
                "schema": { "type": "object" }
              }
            }
          }
        }
      }
    },
    "/api/productos": {
      "get": {
        "summary": "Listar productos o filtrar por nombre",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Texto parcial del nombre",
            "required": false,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Producto" }
                }
              }
            }
          }
        }
      }
    },
    "/api/productos/{id}": {
      "get": {
        "summary": "Obtener producto por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Producto" }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Producto": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "precio": { "type": "number" },
          "stock": { "type": "integer" }
        }
      }
    }
  }
}